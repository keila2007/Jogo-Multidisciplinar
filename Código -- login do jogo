        <form id="esqueciForm">
          <input type="email" placeholder="E-mail" required />
          <input type="text" placeholder="Nome de usuário" required />
          <button type="submit">Continuar</button>
          <p><a onclick="trocarPagina('login')">Voltar ao login</a></p>
