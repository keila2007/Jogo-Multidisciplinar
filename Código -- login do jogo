        <div>
          <input type="password" placeholder="Confirmar nova senha" required />
          <button type="button" class="toggle-password" onclick="toggleSenha('senha', this)">Mostrar</button>
        </div>
          <div class="password-container">
          <input type="password" placeholder="nova senha" required />
          <button type="button" class="toggle-password" onclick="toggleSenha('senha', this)">Mostrar</button>
        </div>
          <button type="submit">Salvar</button>
          <p><a onclick="trocarPagina('login')">Voltar ao login</a></p>
        </form>
