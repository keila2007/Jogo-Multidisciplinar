  <script>
    function trocarPagina(id) {
      document.querySelectorAll(".page").forEach(p => p.classList.remove("active"));
      document.getElementById(id).classList.add("active");
    }

    document.getElementById("cadastroForm")?.addEventListener("submit", function (e) {
      e.preventDefault();
      const senha = this.querySelector("input[placeholder='Senha']").value;
      const confirmar = this.querySelector("input[placeholder='Confirmar senha']").value;
      if (senha !== confirmar) {
        alert("As senhas não coincidem!");
        return;
      }
      alert("Cadastro realizado com sucesso!");
      trocarPagina('login');
    });

    document.getElementById("loginForm")?.addEventListener("submit", function (e) {
      e.preventDefault();
      alert("Login realizado!");
    });

    document.getElementById("esqueciForm")?.addEventListener("submit", function (e) {
      e.preventDefault();
      trocarPagina('redefinir');
    });

    document.getElementById("redefinirForm")?.addEventListener("submit", function (e) {
      e.preventDefault();
      const senha = this.querySelector("input[placeholder='Nova senha']").value;
      const confirmar = this.querySelector("input[placeholder='Confirmar nova senha']").value;
      if (senha !== confirmar) {
        alert("As senhas não coincidem!");
        return;
      }
      alert("Senha redefinida com sucesso!");
      trocarPagina('login');
    });
  
  function toggleSenha(idCampo, btn) {
      const input = document.getElementById(idCampo);
      const tipo = input.getAttribute("type") === "password" ? "text" : "password";
      input.setAttribute("type", tipo);

      // Alternar o emoji do botão (opcional)
      btn.textContent = tipo === "password" ? "Mostrar" : "Esconder";
    }
  </script>
